<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appetizers_Page"
    android:background="@drawable/background02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/backhomebtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Category"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="440dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="300dp"
                                android:layout_height="200dp"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardMaxElevation="12dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="280dp"
                                        android:layout_height="220dp"
                                        android:src="@drawable/ap01"/>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Garlic Toast"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="0dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs.490.00"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="0dp"
                                android:layout_gravity="center"/>

                            <Button

                                android:layout_width="300dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Customize"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="440dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="300dp"
                                android:layout_height="200dp"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardMaxElevation="12dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="280dp"
                                        android:layout_height="220dp"
                                        android:src="@drawable/ap02"/>


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cheesy Garlic Toast"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="0dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs.770.00"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="0dp"
                                android:layout_gravity="center"/>

                            <Button

                                android:layout_width="300dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Customize"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="440dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="300dp"
                                android:layout_height="200dp"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardMaxElevation="12dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="280dp"
                                        android:layout_height="220dp"
                                        android:src="@drawable/ap03"/>


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cheesy Garlic Bread Supreme"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="0dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs.990.00"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="0dp"
                                android:layout_gravity="center"/>

                            <Button

                                android:layout_width="300dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Customize"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>